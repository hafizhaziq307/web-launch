{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "webLaunch",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
        "all": true,
        "fs": {
            "all": true,
            "copyFile": true,
            "createDir": true,
            "readDir": true,
            "removeDir": true,
            "removeFile": true,
            "renameFile": true,
            "writeFile": true,
            "scope": [
                "**"
            ]
        },
        "shell": {
        "all": true, 
        "execute": true,
        "sidecar": true,
        "open": true
        },
        "protocol": {
            "all": true,
            "asset": true,
            "assetScope": ["*"]
        }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "webLaunch",
        "width": 800,
        "height": 600
      }
    ]
  }
}
